{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
      <section>
		{{> title data="My educations" big=false}}
		<ul>
			{{#each educations}}
			<li>
        {{name}}
        {{#if isEnd includeZero=true}} (Had finished) {{/if}}
        {{#unless isEnd includeZero=false}} (Not had finished) {{/unless}}
      </li>
			{{/each}}
		</ul>
      </section>
      <br />
      <section>
        {{> title data="My certificates" big=true }}
        <ul>
          {{#each certificates}}
          <li>{{name}} (ID:{{id}})</li>
          {{/each}}
        </ul>
      </section>
    </main>
  {{/with}}
</div>

