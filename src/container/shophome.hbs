<main class='ms-5'>
  <section class='m-5'>
    <div class='row'>
      {{#with navigation}}
        {{#each links}}
          <div class='col-3'>
            <a
              href='{{href}}'
              class='btn btn-link'
            >{{text}}</a>
          </div>
        {{/each}}
      {{/with}}
    </div>
  </section>
  <hr class='my-4' />
  <section>
    <div>
      {{#with newsBlock}}
        <h1 class='display text-center mb-3'>{{title}}</h1>
        {{#each cards}}
          <div class='card'>
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            <div>
              {{#if isTop}}
                <button
                  class='btn btn-success rounded-pill'
                >Нова</button>
              {{/if}}
              {{#if isNew}}
                <button
                  class='btn btn-danger rounded-pill'
                >Топ </button>
              {{/if}}
            </div>
          </div>
        {{/each}}
      {{/with}}
    </div>
  </section>
  <hr class='m-4' />
  <section class='m-5'>
    {{#with goodsBlock}}
      <div class='row g-4 mt-5'>
        <div class='col-12'>

          <div class='nav nav-tabs'>
            {{#each tabs}}
              <div class='nav-item'>

                <a href='#' class='nav-link active'>{{#if
                    isDisabled
                  }} {{text}} {{/if}}</a>

              </div>
              <div class='nav-item'>
                <a href='#' class='nav-link mb-4'>
                  {{#if isActive}} {{text}} {{/if}}</a>

              </div>
              <div class='nav-item'>
                <a href='#' class='nav-link mb-4'>
                  {{#if isActive}} {{text}} {{/if}}</a>

              </div>
              <div class='nav-item'>
                <a href='#' class='nav-link mb-4'>
                  {{#if isActive}} {{text}} {{/if}}</a>

              </div>
            {{/each}}
          </div>

        </div>
      </div>

      <div class='row mt-5'>
        {{#each cards}}
          <div class='col-4 mt-5 g-3'>
            <div>
              <img
                class='card-img-top'
                src={{image}}
                alt='photo'
              />
            </div>
            <div class='card p-1'>
              <div class='card-title'>
                <h6 class='mt-1'>{{title}}
                  {{#if isHot}}
                    <button
                      class='btn btn-success btn-sm rounded-pill'
                    >Нова</button>
                  {{/if}}
                  {{#if isNew}}
                    <button
                      class='btn btn-danger btn-sm rounded-pill'
                    >Топ </button>
                  {{/if}}
                </h6>
              </div>
              <p class='text-center'>{{description}}</p>
            </div>
          </div>
        {{/each}}
      </div>
    {{/with}}
  </section>
  <hr class='m-5' />
  <section class='m-5'>
    {{#with subscribe}}
      <div class='row mt-5'>
        <div class='alert alert-dark'>
          <h2>{{header}}</h2>
          <div>
            <p>{{description}}</p>
          </div>
          <div>
            {{#each buttons}}
              <a
                href='{{link}}'
                class='btn btn-primary'
              >{{text}}</a>
            {{/each}}
          </div>
        </div>

      </div>
    {{/with}}
  </section>
  <hr class='m-5' />
  <section class='m-5'>
    {{#with service}}
      <div class='row mt-5'>
        <div class='alert alert-success'>
          <h2>{{title}}</h2>
          <div>
            <p>{{description}}</p>
          </div>
          <div>
            {{#each buttons}}
              <a
                href='{{link}}'
                class='btn btn-link'
              >{{text}}</a>
            {{/each}}
          </div>
        </div>

      </div>
    {{/with}}

  </section>

</main>