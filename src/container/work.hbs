{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
      <section>
		{{> title data="Work history" big=true}}

		<hr />
		<div>
			<p>
				<ul>
					{{#each works}}
						<li>
							<div>
								{{position}}
							</div>
							<br />
							<div> 
								<b>
									{{#if company.url}}
										{{> link text=company.name href=company.url blank=true notLine=true}}
										{{else}} 
										<b>Now, I`m working - {{company.name}}</b>
									{{/if}}
								</b>
							</div>
							<br />
							<div>
								{{duration.from}} - 
									{{#if duration.to}} 
										{{duration.to}} 
									{{else}} Now, I`m working here 
								{{/if}}
							</div>

							<br />
							<br />

							<div>
								<strong>Projects ({{projectAmount}})</strong>
							</div>

							<br />
							<div>
								<ul>
									{{#each projects}}
									<li>
										<div>
											{{> link text=name href=url blank=true notLine=true}}
											<p>{{about}}</p>
											<br>
											<em>Project stacks ({{stackAmount}})</em>
											<br>
											{{#each stacks}}
											<li>
												<div>{{name}}</div>
											</li>
											{{/each}}
											<br>
											<em>Project awards ({{awardAmount}})</em>
											{{#each awards}}
											<li>
												<div>{{name}}</div>
											</li>
											{{/each}}
										</div>
									</li>
									{{/each}}
									
								</ul>
							</div>
						</li>
					{{/each}}
				</ul>
			</p>
		</div>
      </section>
    </main>
  {{/with}}
</div>

